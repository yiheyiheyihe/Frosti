---
import { SERVER_URL } from "../consts";
---

<br />
<link
  rel="stylesheet"
  href="https://unpkg.com/@waline/client@v3/dist/waline-meta.css"
/>
<div class="comment">
  <div id="waline" data-server-url={SERVER_URL}></div>
</div>
<script type="module" is:inline>
  import { init } from "https://unpkg.com/@waline/client@v3/dist/waline.js";

  const serverURL = document
    .getElementById("waline")
    .getAttribute("data-server-url");
  init({
    el: "#waline",
    serverURL: "https://rain.6bk.buzz/",
    dark: 'html[data-theme="dracula"]',
    reaction: [
      "https://gitee.com/yiheyiheyihe/pictures/raw/master/good.png",
      "https://gitee.com/yiheyiheyihe/pictures/raw/master/happy.png",
      "https://gitee.com/yiheyiheyihe/pictures/raw/master/heart.png",
      "https://gitee.com/yiheyiheyihe/pictures/raw/master/rocket.png",
      "https://gitee.com/yiheyiheyihe/pictures/raw/master/eyes.png",
      "https://gitee.com/yiheyiheyihe/pictures/raw/master/confuse.png",
      "https://gitee.com/yiheyiheyihe/pictures/raw/master/color.png",
      "https://gitee.com/yiheyiheyihe/pictures/raw/master/bad.png",
    ],
    emoji: false,
    search: false,
  });
</script>